@model LimehouseStudiosTechChallenge.Models.UserPostsViewModel

<h3>@Model.User.Name (@Model.User.Username)</h3>

<table id="postsTable" class="table">
	<thead>
		<th>Title</th>
		<th>Body</th>
	</thead>
	<tbody>
	@foreach (var post in Model.User.Posts)
	{
		<tr>
			<td>@post.Title</td>
			<td>@post.Body</td>
		</tr>
	}
	</tbody>
</table>

